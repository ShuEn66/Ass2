<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.UserFragment">

        <Button
            android:id="@+id/buttonChangePassword"
            android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:backgroundTint="@color/yellowButton"
            android:text="@string/changePassword"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutUserProfileContent"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonChangePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_viewUserName"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/rectanglenodeep">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectanglenodeep"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <!--get user name from database-->
                    <TextView
                        android:id="@+id/UserName"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rectanglenodeep"
                        android:text="@string/UserName"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:translationX="10dp" />

                    <TextView
                        android:id="@+id/textViewUserNameValue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rectanglenodeep"
                        android:text="TextView"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:translationX="10dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewUpdateUserName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectanglenodeep"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/updateClickableText"
                    android:textColor="@color/blue" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_viewUserIC"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/rectangledeep">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/rectangledeep"
                android:orientation="vertical">

                <!--get user ic from database-->
                <TextView
                    android:id="@+id/UserIC"
                    android:layout_width="395dp"
                    android:layout_height="30dp"
                    android:alpha="0.6"
                    android:background="@drawable/rectangledeep"
                    android:text="@string/UserIC"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:translationX="10dp" />

                <TextView
                    android:id="@+id/textViewUserICValue"
                    android:layout_width="397dp"
                    android:layout_height="30dp"
                    android:alpha="0.6"
                    android:background="@drawable/rectangledeep"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:translationX="10dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_viewUserEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/rectanglenodeep">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectanglenodeep"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <!--get user name from database-->

                    <TextView
                        android:id="@+id/UserEmail"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:alpha="0.6"
                        android:background="@drawable/rectanglenodeep"
                        android:text="@string/UserEmail"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:translationX="10dp" />

                    <TextView
                        android:id="@+id/textViewUserEmailValue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:alpha="0.6"
                        android:background="@drawable/rectanglenodeep"
                        android:text="TextView"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:translationX="10dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_viewUserMobile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/rectangledeep">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/rectangledeep"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="330dp"
                    android:layout_height="60dp"
                    android:orientation="vertical">

                    <!--get user name from database-->
                    <TextView
                        android:id="@+id/UserMobile"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rectangledeep"
                        android:text="@string/UserMobile"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="italic"
                        android:translationX="10dp" />

                    <TextView
                        android:id="@+id/textViewUserMobileValue"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/rectangledeep"
                        android:text="TextView"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:translationX="10dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textViewUpdateUserMobile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rectangledeep"
                    android:clickable="true"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/updateClickableText"
                    android:textColor="@color/blue" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>