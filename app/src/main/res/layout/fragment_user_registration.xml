    <ImageView
        android:id="@+id/imageViewRegistrationLogo"
        android:layout_width="218dp"
        android:layout_height="118dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/gol_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewAccInfoContainer"
        android:layout_width="320dp"
        android:layout_height="350dp"
        android:layout_marginTop="84dp"
        android:src="@drawable/rectangledeepcorner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRegistrationLogo" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="178dp"
        android:layout_height="72dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/rectanglenodeep"
        app:layout_constraintEnd_toEndOf="@+id/imageViewAccInfoContainer"
        app:layout_constraintStart_toStartOf="@+id/imageViewAccInfoContainer"
        app:layout_constraintTop_toBottomOf="@+id/imageViewRegistrationLogo" />

    <TextView
        android:id="@+id/textViewRegistrationTitle"
        android:layout_width="155dp"
        android:layout_height="59dp"
        android:text="@string/Registrationtitle"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textViewRegisterEmailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="@string/UserEmail"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewAccInfoContainer"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:text="*"
        android:textColor="@color/design_default_color_error"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewRegisterEmailTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewRegisterEmailTitle" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="0dp"
        android:layout_height="14dp"
        android:layout_marginStart="10dp"
        android:text="*"
        android:textColor="@color/design_default_color_error"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/textViewPropertyTypeAccInfoTitle"
        app:layout_constraintTop_toTopOf="@+id/textViewPropertyTypeAccInfoTitle" />

    <ImageView
        android:id="@+id/imageViewEmailContainer"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/rectanglenodeep"
        app:layout_constraintStart_toStartOf="@+id/textViewRegisterEmailTitle"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <EditText
        android:id="@+id/editTextTextUserName"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/hintregisterEmail"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/imageViewEmailContainer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageViewEmailContainer"
        app:layout_constraintTop_toTopOf="@+id/imageViewEmailContainer" />

    <TextView
        android:id="@+id/textViewErrorEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/ErrorEmail"
        android:textColor="@color/design_default_color_error"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewEmailContainer"
        app:layout_constraintTop_toBottomOf="@+id/imageViewEmailContainer" />

    <TextView
        android:id="@+id/textViewPropertyTypeAccInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/UserPassword"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textViewErrorEmail"
        app:layout_constraintTop_toBottomOf="@+id/textViewErrorEmail" />

    <ImageView
        android:id="@+id/imageViewPropertyAccInfoContainer"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/rectanglenodeep"
        app:layout_constraintStart_toStartOf="@+id/textViewPropertyTypeAccInfoTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewPropertyTypeAccInfoTitle" />

    <EditText
        android:id="@+id/editTextUserIC"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:ems="10"
        android:hint="@string/UserPassword"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/imageViewPropertyAccInfoContainer"
        app:layout_constraintTop_toTopOf="@+id/imageViewPropertyAccInfoContainer" />

    <Button
        android:id="@+id/buttonRegister"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/yellowButton"
        android:textColor="@color/black"
        android:text="@string/RegisterButton"
        app:layout_constraintEnd_toEndOf="@+id/imageViewPropertyAccInfoContainer"
        app:layout_constraintStart_toStartOf="@+id/imageViewPropertyAccInfoContainer"
        app:layout_constraintTop_toBottomOf="@+id/imageViewPropertyAccInfoContainer" />

    <TextView
        android:id="@+id/textViewAlreadyHaveAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:text="@string/AlreadyHaveAcc"
        android:textColor="@color/black"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/buttonRegister"
        app:layout_constraintTop_toBottomOf="@+id/buttonRegister" />

    <TextView
        android:id="@+id/textViewRegisterToSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/SignIn"
        android:textColor="@color/blue"
        app:layout_constraintBottom_toBottomOf="@+id/textViewAlreadyHaveAcc"
        app:layout_constraintStart_toEndOf="@+id/textViewAlreadyHaveAcc"
        app:layout_constraintTop_toTopOf="@+id/textViewAlreadyHaveAcc" />


</androidx.constraintlayout.widget.ConstraintLayout>
